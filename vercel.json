{
  "version": 2,
  "builds": [
    {
      "src": "src/static/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://seu-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/src/static/$1"
    },
    {
      "src": "/",
      "dest": "/src/static/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/src/static/index.html"
    }
  ]
}

